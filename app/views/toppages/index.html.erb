<% if logged_in? %>
  <div class="row">
    <aside class="col-sm-5">
      <%= form_with(model: @micropost, local: true) do |f| %>
        <div class="form-group">
          <i class="fas fa-book-open"></i> 読んだ本のタイトル：<%= f.text_area :title, class: 'form-control', rows: 3 %>
        </div>
        <div class="form-group">
        <i class="fas fa-user-edit"></i> 作者：
          <%= f.text_area :people, class: 'form-control', rows: 2 %>
        </div>
        <div class="form-group">
        <i class="fas fa-sort-numeric-down"></i> ページ数：
          <%= f.text_area :page, class: 'form-control', rows: 2 %>
        </div>
        <div class="form-group">
        <i class="fas fa-comments"></i> 内容・感想：
          <%= f.text_area :content, class: 'form-control', rows: 10 %>
        </div>
      <div style="background-color:#5f9ea0;"><%= f.submit 'Post', class: 'btn btn-block' %></div>
    <% end %>
    </aside>
    <div class="col-sm-7">
      <%= render 'microposts/microposts', microposts: @microposts %>
  </div>
<% end %>